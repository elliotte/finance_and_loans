$white-gray: #fff !default;
$large-screen: em(860) !default;
$navigation-padding: 1em;
$navigation-background: $white-gray;
$border-color:#FB7D98;
$body-bg-color:#e5e5e5;
$between-hive-box-padding: 5em;
$hive-box-padding:2em;
$min-box-height: 10em;

body {
  background-color: lighten($body-bg-color, 5);
}

.top-nav {
  background-color: $navigation-background;
  border-bottom: 1px solid lighten($border-color, 10);
  width: 100%;
  z-index: 999;
  padding: $navigation-padding;
  a {
    img {
      @include size(3em);
    }
  }
}

.top-nav-wrapper {
    @include clearfix;
    @include outer-container;
    div {
      @include span-columns(6);
    }
}

.buttons-vertical-align {
    display:table;
    a {
      display:table-cell;
      vertical-align:middle;
      text-decoration: none;
      padding: 0 1em;
    }
}

.float-links-right {
  a {
    float: right;
    padding-left: 1em;
  }
}

.ui-flash {
  border-right:1px solid #FB7D98;
}

section.layout-container {
  @include outer-container;
  padding-top: $between-hive-box-padding;
}

.hives-box {
  opacity: 0;
  @include transition (all 0.4s ease-in-out);
  border-radius: 3px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid #d8d8d8;
  border-bottom-width: 2px;
  border-top-width: 0;
  min-height: 15em;
  margin-left: 10%;
  margin-right: 10%;
  margin-bottom: $between-hive-box-padding;
  padding: $hive-box-padding;
  .hb-container {
    padding-top: $hive-box-padding * 1.2;
    padding-bottom: $hive-box-padding * 1.2;
    @include clearfix;
    @include display(flex);
    @include justify-content(center);
    @include align-items(center);
    @include flex-wrap(wrap);
    clear: both;
    text-align: center;
  }
}


.hb-container {
  $top-gutter:1em;
  aside {
    @include flex(4);
    min-height: $min-box-height;
    padding-top: $top-gutter;
    padding-bottom: $top-gutter;
    border-right: 1px solid #d8d8d8;
    img {
      @include size(5.5em);
      margin-bottom: $top-gutter;
    }
  }
  aside:first-child {
    border-right:1px solid #FB7D98;
  }
  aside:last-child {
    border-right:0px solid #FB7D98;
    padding-top: $min-box-height * 0.4;
  }
}
.lovely-link-button {
    border: 1px solid #FFA66F;
    padding: 1em;
    border-radius: 1em;
}
.lovely-link-button:hover {
    border: 1px solid #477dca;
    padding: 1em;
    border-radius: 1em;
    color:#FFA66F;
}

.box-hover:hover {
    transform: rotate(0deg) scale(1.022) skew(0deg) translate(0px);
    -webkit-transform: rotate(0deg) scale(1.022) skew(0deg) translate(0px);
    -moz-transform: rotate(0deg) scale(1.022) skew(0deg) translate(0px);
    -o-transform: rotate(0deg) scale(1.022) skew(0deg) translate(0px);
    -ms-transform: rotate(0deg) scale(1.022) skew(0deg) translate(0px);
    -webkit-box-shadow: 4px 4px 5px 0px rgba(216,216,216,1);
    -moz-box-shadow: 4px 4px 5px 0px rgba(216,216,216,1);
    box-shadow: 4px 4px 5px 0px rgba(216,216,216,1);
}

.nice-display {
  @include transition(opacity 1.25s ease);
  opacity: 1;
}


/*SLIDING PANEL*/
.sliding-panel-content {  
  $action-color: #477DCA !default;
  $dark-gray: #333 !default;
  $sliding-panel-border-color: $dark-gray;
  $sliding-panel-background: lighten($sliding-panel-border-color, 5%);
  $sliding-panel-color: #fff;
  $sliding-panel-border: 1px solid $sliding-panel-border-color;
  $sliding-panel-background-hover: $action-color;
  $sliding-panel-color-hover: #fff;
  $sliding-panel-background-focus: lighten($sliding-panel-background, 5%);

  @include position(fixed, 0px auto 0px 0px);
  @include size(220px 100%);
  @include transform(translateX(-220px));
  @include transition(all 0.25s linear);
  background: $sliding-panel-background;
  z-index: 999999;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;

  ul {
    padding: 0;
    margin: 0;
  }

  li {
    list-style: none;
  }

  li a {
    border-bottom: $sliding-panel-border;
    color: $sliding-panel-color;
    display: block;
    font-weight: bold;
    padding: 1em;
    text-decoration: none;

    &:focus {
      background-color: $sliding-panel-background-focus;
    }

    &:hover {
      background-color: $sliding-panel-background-hover;
      color: $sliding-panel-color-hover;
    }
  }

  &.is-visible {
    @include transform(translateX(0));
  }
}

.sliding-panel-fade-screen {
  @include position(fixed, 0px 0px 0px 0px);
  @include transition;
  background: black;
  opacity: 0;
  visibility: hidden;
  z-index: 999998;

  &.is-visible {
    opacity: 0.4;
    visibility: visible;
  }
}

.sliding-panel-button {
  padding: 10px 16px;
  display: inline-block;
  cursor: pointer;
  position: relative;
  outline: none;

  img {
    height: 1.3em;
  }
}

