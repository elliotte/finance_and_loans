.hero {  
  $base-border-radius: 3px !default;
  $action-color: #94CFD5 !default;
  $large-screen: em(860) !default;
  $hero-background-top: #f3655e; 
  $hero-background-bottom: #f3655e;
  $hero-color: white;
  $gradient-angle: 10deg;
  @include background(url('<%= asset_path("bg-fin.jpg") %> '));
  
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  padding-bottom: 3em;
  min-height: 40em;

  .hero-logo img {
    height: 7em;
    margin-bottom: 3em;
  }

  .hero-inner {
    @include outer-container;
    @include clearfix;
    color: $hero-color;
    margin: auto;
    padding: 3.5em;
    text-align: center;

    .hero-copy {
      text-align: center;
      
      h1 {
        font-size: 1.6em;
        margin-bottom: 0.5em;

        @include media($large-screen) {
          font-size: 1.8em;
        }
      }

      p {
        font-weight: 200;
        line-height: 1.4em;
        margin: 0 auto 3em auto; 

        @include media($large-screen) {
          font-size: 1.1em;
          max-width: 40%;
        }
      }
    }

    button {
      @include button(flat, $action-color);
      padding: 0.7em 1em;
    }
  }
}

.hero.gradient {
  @include radial-gradient(circle at 50% 80%, #eee 10%, #94CFD5 30%, #efefef);
}
