<!-- COMMON JS FILE FOR common SHOW AND DASH -->
<%= javascript_include_tag 'boardPacks' %>
<!-- SHOW PAGE ONLY JS -->

<article class="type-system-slab">
    <header class="show-nav" role="banner">
       <div>  
          <p><%= link_to 'Back', url_for(:back) %></p>
       </div> 
       <div>  
          <a href="/welcome/auth_landing"><img id="user-to-auth-landing" src="<%= asset_path('pb-logo.png') %>"></a>
       </div>  
       <div>  
          <p><%= link_to 'ShowPage', report_path(@report) %></p>
       </div> 
    </header>
</article>

<section class="layout-container">
  <article class="type-system-slab">
        <div class="grid-items">
          <a href="<%= new_report_note_path(@report, subject: 'General') %>" href="javascript:void(0)" class="grid-item" data-remote="true">
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="">
            <h1>New Note</h1>
            <p>Lorem ipsum dolor sit amet, elit. Rem, illum.</p>
          </a>
          <%= link_to export_current_report_notes_path(@report),:remote=> true,:class=>"grid-item" do%>
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_2.png" alt="">
            <h1>Export current</h1>
            <p>Lorem ipsum dolor sit amet, elit. Rem, illum.</p>
          <%end%>
          <%= link_to export_all_report_notes_path(@report),:remote=> true,:class=>"grid-item" do%> 
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_2.png" alt="">
            <h1>Export all</h1>
            <p>Lorem ipsum dolor sit amet, elit. Rem, illum.</p>
          <%end%>
        </div>
    </article>
</section>

<section class="layout-container">
  <article class="type-system-slab">
        <div class="scroll-on-page">
              <aside id="scroll-on-page-top">
                <a class="scroll-on-page-link" href="#general">General</a>
                <a class="scroll-on-page-link" href="#PnL">Profit and Loss</a>
                <a class="scroll-on-page-link" href="#BS">Balance Sheet</a>
              </aside>
              <article>
                  <section>
                        <h4 id="general">General</h4>
                        <br>
                        <% @notes.select { |n| n.subject == 'General' }.each do |note| %>
                              <div id="note_<%= note.id %>" class="comment">
                                    <div class="comment-image">
                                      <img src="<%= asset_path('pb-logo.png') %>">
                                    </div>
                                    <div class="comment-content">
                                      <h1><%= note.subject %>   <span style="font-size:70%; color:#94CFD5;"> { <%= note.repdate.strftime("%B %Y") %> } </span></h1>
                                      <p><%= note.body %></p>
                                      <p class="comment-detail"><%= note.commenter %> <a href="<%= note.filelink %>" target="_blank">Link to backup</a></p>
                                      <p> <%= link_to image_tag("ico4b.png", width: 25), edit_report_note_path(@report, note), remote: true %> <%= link_to image_tag("ico5b.png", width: 25), report_note_path(@report, note), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %> </p>
                                    </div>
                              </div>
                        <% end %>
                  </section>
                  <section>
                    <h4 id="PnL">Profit and Loss</h4>
                    <br>
                     <% @notes.select { |n| n.subject == 'ProfitLoss' }.each do |note| %>
                              <div id="note_<%= note.id %>" class="comment">
                                    <div class="comment-image">
                                      <img src="<%= asset_path('pb-logo.png') %>">
                                    </div>
                                    <div class="comment-content">
                                      <h1><%= note.subject %>   <span style="font-size:70%; color:#94CFD5;"> { <%= note.repdate.strftime("%B %Y") %> } </span></h1>
                                      <p><%= note.body %></p>
                                      <p class="comment-detail"><%= note.commenter %> <a href="<%= note.filelink %>" target="_blank">Link to backup</a></p>
                                      <p> <%= link_to image_tag("ico4b.png", width: 25), edit_report_note_path(@report, note), remote: true %> <%= link_to image_tag("ico5b.png", width: 25), report_note_path(@report, note), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %> </p>
                                    </div>
                              </div>
                     <% end %>

                  </section>
                  <section>
                          <!-- ONLY ONE SHOWING... ONLY CLICK INTO MODAL -->
                          <h4 id="BS">Balance Sheet</h4>
                          <br>
                          <% @notes.select { |n| n.subject == 'BalanceSheet' }.each do |note| %>
                              <div id="note_<%= note.id %>" class="comment">
                                    <div class="comment-image">
                                      <img src="<%= asset_path('pb-logo.png') %>">
                                    </div>
                                    <div class="comment-content">
                                      <h1><%= note.subject %>   <span style="font-size:70%; color:#94CFD5;"> { <%= note.repdate.strftime("%B %Y") %> } </span></h1>
                                      <p><%= note.body %></p>
                                      <p class="comment-detail"><%= note.commenter %> <a href="<%= note.filelink %>" target="_blank">Link to backup</a></p>
                                      <p> <%= link_to image_tag("ico4b.png", width: 25), edit_report_note_path(@report, note), remote: true %> <%= link_to image_tag("ico5b.png", width: 25), report_note_path(@report, note), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %> </p>
                                    </div>
                              </div>
                        <% end %>
                    </section>
                </article>
                <!-- WRAPPER ARTICLE -->
          </div>
          <!-- END OF SCROLL -->
    </article>
</section>

<script>
  jQuery(function(){  
    jQuery.mark.jump();
  });
</script>