
<article class="type-system-slab modal-form">
      <h1>
        <% if @note.new_record? %>
          New Note
        <% else %>
          Edit Note
        <% end %>
      </h1>
      <p class="lovely-pink"><a href="javascript:void(0)">enter comment text below</a></p>

      <%= form_for([@report, @note], remote: true) do |f| %>

          <table class="table-minimal">
              <tbody>
                  <tr>
                    <td class="text-pink"></td>
                    <td class="input-style"><%= f.text_area :body, placeholder: "e.g. bank t-account reconciliation spreadsheet" %></td>
                  </tr>
                  <tr>
                    <td class="text-pink">Reference backup file:</td>
                    <td class="input-style"><%= f.text_field :filelink, placeholder: "paste link.." %></td>
                  </tr>
                  <%= f.hidden_field :commenter, value: current_user.email %>
                  <%= f.hidden_field :subject %>
                  <tr>
                    <td class="button-style"><%= submit_tag 'Save Note' %></td>
                    <td></td>
                  </tr>
                </tbody>
          </table>
      <% end %>

</article>








