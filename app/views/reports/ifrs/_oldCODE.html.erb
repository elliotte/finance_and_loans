<% cy_gp_rev = [0] %>
<% py_gp_rev = [0] %>
<% cy_gp_cos = [0] %>
<% py_gp_cos = [0] %>
<% cy_op_rev = [0]  %>
<% py_op_rev = [0]  %>
<% cy_op_cos = [0]  %>
<% py_op_cos = [0]  %>
<% cy_pat = [0] %>
<% py_pat = [0] %>

