<% cp = @report.current_end.strftime("%B %Y") %>
<% pp = @report.comparative_end.strftime("%B %Y") %>

<!-- CALC PLACEHOLDERS -->
<% nca_amounts = { cy: [0], py: [0] } %>
<% ca_amounts = { cy: [0], py: [0] } %>

<!-- ASSETS GRAPHS AND STATS -->

<article class="type-system-rounded fin-statement">
    <div id="assets-graph">
    </div>
</article>

<br>
<br>

<article class="type-system-rounded fin-statement">

          <h1 style="color:#f3655e;">Balance Sheet</h1>
          <div style="width:100%;">
              <table id="" class="table-minimal">

                  <tbody>
                      <tr>
                          <td></td>
                          <td><%= cp %></td>
                          <td><%= pp %></td>
                          <td></td>
                      </tr>
                      <tr>
                          <td>Fixed assets</td>
                          <td style="color:#f3655e;">£</td>
                          <td style="color:#f3655e;">£</td>
                          <td style="color:#f3655e;"> &#916 mvmt </td>
                      </tr>

                      <% $cy_fa_tang = 0 %>
                      <% $py_fa_tang = 0 %>
                      <!-- NON CURRENT ASSET TAGS -->
                      <!-- NON CURRENT ASSET TAGS -->
                      <% @tags[:fa_tang].each do | master_tag | %>
                          <% cy = find_data(master_tag, :cy)  %>
                          <% py = find_data(master_tag, :py)  %>
                          <% cy_amt = yield_amount { cy }.to_i %>
                          <% py_amt = yield_amount { py }.to_i %>
                          <% unless (cy_amt + py_amt == 0.00) %>
                              <% $cy_fa_tang += cy_amt %>
                              <% $cy_fa_tang += py_amt %>
                              <!-- HIDDEN JS LINE ASSETS -->
                              <span class="js-fs-line" data-tag="assets" data-reporting-line="<%= master_tag %>" data-cy="<%= cy_amt %>" data-py="<%= py_amt %>"></span>
                          <% end %>
                          <!-- END OF UNLESS -->
                      <% end %>
                      <!-- DISPLAY SUMMARIES FA TANG -->
                      <tr>
                          <td style="color:#f3655e;" class="values_breakdown" data-ifrstag="Admininstrative expenses" data-period="">Tangible assets</td>
                          <% nca_amounts[:cy] << $cy_fa_tang %>
                          <% nca_amounts[:py] << $py_fa_tang %>
                          <% mvmt = $cy_fa_tang - $py_fa_tang %>
                          <td class="values_breakdown" data-summary-line="true" data-summary-tag="op_admin" data-ifrstag="Admininstrative expenses" data-period="current">(<%= $cy_fa_tang %>)</td>
                          <td class="values_breakdown" data-summary-line="true" data-summary-tag="op_admin" data-ifrstag="Admininstrative expenses" data-period="comparative">(<%= $py_fa_tang %>)</td>
                          <td><%= display_ifrs(mvmt) %></td>
                      </tr>
                     
                      <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                      </tr>

                      <% cy_nca = nca_amounts[:cy].inject(:+) %>
                      <% py_nca = nca_amounts[:py].inject(:+) %>
                      <% mvmt = cy_nca - py_nca %>
                      <tr>
                        <td></td>
                        <td style="color:#f3655e;"><%= cy_nca %></td>
                        <td style="color:#f3655e;"><%= py_nca %></td>
                        <td><%= mvmt %></td>
                      </tr>
                      <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                      </tr>

                  </tbody>
               </table>
            </div>
</article>
