<div style="color:#FB7D98;" id="table-title">
  <%= "Summary of moneaTag : " + params[:ifrstag] %>
</div>
<br>
<table class="table-minimal">
  <tr style="color:#94CFD5;">
    <td>Type</td>
    <td>Date</td>
    <td>miTag</td>
    <td>Â£</td>
    <td>moneaTag</td>
  </tr>

  <% if params[:summary] %>
  
    <% @data.each do |line| %>
        <% line.each do |value| %>
          <tr>
            <td><%= value.type rescue nil %></td>
            <td><%= value.repdate.strftime('%B %Y') rescue nil %></td>
            <td><%= value.mitag %></td>
            <td><%= number_with_delimiter(value.amount.to_i) %></td>
            <td><%= value.ifrstag %></td>
          </tr>
        <% end %>
    <% end %>

  <% else %>

    <% @data.each do |value| %>
      <tr>
        <td><%= value.type rescue nil %></td>
        <td><%= value.repdate.strftime('%B %Y') rescue nil %></td>
        <td><%= value.mitag %></td>
        <td><%= number_with_delimiter(value.amount.to_i) %></td>
        <td><%= value.ifrstag %></td>
      </tr>
    <% end %>

  <% end %>
</table>
