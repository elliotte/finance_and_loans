
<%= javascript_include_tag 'indexesJS' %>

<div class="hero reports-hero-index">
  <article class="type-system-slab">
    <div class="hero-inner">
    <a href="/welcome/auth_landing" class="hero-logo"><img src="<%= asset_path('home-icon.png') %>"></a>
      <div class="hero-copy">
        <h1 style="color:#d61579;">CashFlow Projections</h1>
        <p style="color:#d61579;">ProfitBees</p>  
      </div>
    </div>
  </article>
</div>

<article class="type-system-slab">
    <section class="index-display-container align-children-center">
        <div class="dropdown">
          <div class="dropdown-container">
            <p class="dropdown-description">New</p>
            <p class="dropdown-button">CashFlow</p>
            <ul class="dropdown-menu dropdown-select">
              <li><%= link_to "12 months", new_ledger_path(type: 'CashFlowLedger'), remote: true %></li>
            </ul>
          </div>
        </div>
    </section>
</article>

<section class="index-display-container">
  <article class="type-system-slab">
    <h2>Your Work</h2>
    <div class="cards">
        <% @cashflows.each do | cashFLow | %>
           <% $randPic = rand(1..142) %>
           <a href="<%= ledger_path(cashFLow) %>" class="card">
              <div class="card-image">
                <img src="<%= asset_path("#{$randPic}" + '.jpg') %>" alt="">
              </div>
              <div class="card-header">
                <%= truncate(cashFLow.user_tag, length: 40) %>
              </div>
              <div class="card-copy">
                <p><%#= boardPack.format %></p>
                <p><%= time_ago_in_words(cashFLow.updated_at) %> ago</p>
              </div>
           </a>
        <% end %>
    </div>
    <!-- END OF CARDS DIV -->
  </article>
</section>

<section class="index-display-container">
  <article class="type-system-slab">
    <h2>Work Shared With You</h2>
    <div class="cards">
     
    </div>
  </article>
</section>

<section class="index-display-container">
  <article class="type-system-slab">
  </article>
</section>

