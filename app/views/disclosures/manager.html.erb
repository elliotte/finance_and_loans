<%#= render partial: 'reports/button_board', locals: {report: @report} %>
<%= javascript_include_tag 'boardPacks' %>

<!-- SHOW PAGE ONLY JS -->
<article class="type-system-slab">
    <header class="show-nav" role="banner">
       <div>  
          <p><%= link_to 'Back', url_for(:back) %></p>
       </div> 
       <div>  
          <a href="/welcome/auth_landing"><img id="user-to-auth-landing" src="<%= asset_path('pb-logo.png') %>"></a>
       </div>  
       <div>  
          <p><%= link_to 'ShowPage', report_path(@report) %></p>
       </div> 
    </header>
</article>

<section class="layout-container">
  <article class="type-system-slab">
        <div class="grid-items">
          <%= link_to new_report_disclosure_path(@report),:class=>"grid-item",remote: true do%> 
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_2.png" alt="">
            <h1>New Disclosure</h1>
            <p>Lorem ipsum dolor sit amet, elit. Rem, illum.</p>
          <%end%>
         <%= link_to export_current_report_disclosures_path(@report,type: :current),:class=>"grid-item",remote: true do%>
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1_dark.png" alt="">
            <h1>Export.current</h1>
            <p style="color:#94CFD5;">to spreadsheet</p>
        <%end%>
        <%= link_to export_current_report_disclosures_path(@report,type: :all),:class=>"grid-item",remote: true do%>
          <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_2_dark.png" alt="">
          <h1>Export.all</h1>
          <p style="color:#94CFD5;">to spreadsheet</p>
        <%end%>
        </div>
    </article>
</section>

<section class="layout-container">
  <article class="type-system-slab">
        <div class="scroll-on-page">
              <aside id="scroll-on-page-top">
                <a class="scroll-on-page-link" href="#general">General</a>
                <!-- <a class="scroll-on-page-link" href="#PnL">Profit and Loss</a>
                <a class="scroll-on-page-link" href="#BS">Balance Sheet</a> -->
              </aside>
              <article>
                  <section>
                        <h4 id="general">General</h4>
                        <br>
                        <% @disclosures.reverse.each do |disclosure| %>
                          <div id="disclosure_<%= disclosure.id %>" class="comment">
                                  <div class="comment-image">
                                    <img src="<%= asset_path('pb-logo.png') %>">
                                  </div>
                                  <div class="comment-content">
                                    <h1><%= disclosure.title %></h1>
                                    <p><%= disclosure.body %></p>
                                    <p class="comment-detail"><%= disclosure.type %></p>
                                    <p>  <%= link_to image_tag("edit-icon.png", width: 25), edit_report_disclosure_path(@report, disclosure), remote: true %>
                                      <%= link_to image_tag("trash.png", width: 25), report_disclosure_path(@report, disclosure), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %> </p>
                                  </div>
                          </div>
                        <% end %>
                  </section>
              </article>
                <!-- WRAPPER ARTICLE -->
          </div>
          <!-- END OF SCROLL -->
    </article>
</section>

<script>
  jQuery(function(){  
    jQuery.mark.jump();
  });
</script>
<style type="text/css">
   #bg-screen-for-modal{
     top: -1px !important;
    }  
</style>
